<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="B3_Font_white">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/skin_black_item</item>
    </style>
    
    <style name="B4_Font_white">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/skin_dark_gray_item</item>
    </style>

    <style name="C8_Font_white">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/skin_blue_item</item>
    </style>
    
    <style name="TitleText">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">@color/skin_bar_text</item>
    </style>
    <style name="TitleBtn">
        <item name="android:textSize">17.0dip</item>
        <item name="android:textColor">@color/skin_bar_btn</item>
    </style>    
    <style name="SmallButtonBlue" parent="@android:style/Widget.Button">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/skin_color_button_blue</item>
        <item name="android:background">@drawable/common_btn_small_blue</item>
        <item name="android:paddingLeft">11.0dip</item>
        <item name="android:paddingRight">11.0dip</item>
        <item name="android:minWidth">47.0dip</item>
        <item name="android:minHeight">30.0dip</item>
    </style>
    <style name="custom_alertdialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/custom_alertdialog_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">#00000000</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
