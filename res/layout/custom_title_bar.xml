<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_title_bar"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/skin_header_bar_bg"
    android:gravity="center_vertical"
    android:padding="0.0px" >

    <!-- 标题文字; -->
    <TextView
        android:id="@+id/tvTitleName"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="88dip"
        android:layout_marginRight="88dip"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@null"
        style="@style/TitleText" />
    <!-- 
        android:textColor="@color/skin_bar_text"
        android:textSize="19.0sp" />
     -->
    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="96.0dip"
        android:layout_marginRight="96.0dip"
        android:layout_marginTop="5.0dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/title_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/skin_bar_text"
            android:textSize="16.0dip" />

        <TextView
            android:id="@+id/title_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_top"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@null"
            android:textColor="@color/skin_bar_text"
            android:textSize="12.0dip" />
    </RelativeLayout>

    <!-- 左箭头 -->
    <TextView
        android:id="@+id/tvTitleArrowBtnLeft"
        style="@style/TitleBtn"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/top_back_left_selector"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="88.0dip"
        android:minWidth="55.0dip"
        android:singleLine="true"
        android:text="@null"
        android:visibility="gone"/>

    <!-- 左边放置的功能按钮 -->
    <TextView
        android:id="@+id/tvTitleBtnLeftButton"
        style="@style/TitleBtn"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/top_button_right_selector"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="88.0dip"
        android:minWidth="52.0dip"
        android:singleLine="true"
        android:text="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvTitleBtnRightButton"
        style="@style/TitleBtn"
        android:layout_width="wrap_content"
        android:layout_height="36.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/top_button_right_selector"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxWidth="88.0dip"
        android:minWidth="52.0dip"
        android:singleLine="true"
        android:text="@null"
        android:visibility="gone" />

</RelativeLayout>